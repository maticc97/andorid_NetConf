<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp">

    <TextView
        android:paddingTop="20px"
        android:layout_width="match_parent"
        android:id="@+id/customer_id"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Banka ABC"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/email1_label"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_id"
        android:paddingTop="20px"
        android:text="Customers Contact:"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/email1_text"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_id"
        android:layout_toRightOf="@id/email1_label"
        android:paddingTop="20px"
        android:text="custo1_info@email.com" />

    <TextView
        android:id="@+id/email2_label"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email1_label"
        android:paddingTop="20px"
        android:text="Engineer Contact:"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/email2_text"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email1_text"
        android:layout_toRightOf="@id/email1_label"
        android:paddingTop="20px"
        android:text="engineer2@email.com" />

    <TextView
        android:id="@+id/device_count_label"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email2_label"
        android:paddingTop="20px"
        android:text="Device count:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/device_count_text"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email2_text"
        android:layout_toRightOf="@id/device_count_label"
        android:paddingTop="20px"
        android:text="1"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_count_text"
        android:text="Show devices"/>

</RelativeLayout>